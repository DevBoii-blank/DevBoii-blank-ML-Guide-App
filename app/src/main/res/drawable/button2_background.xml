<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="0.5dp"
        android:right="0.5dp"
        android:bottom="0.5dp"
        android:top="0.5dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <stroke
                android:width="4dp"
                android:color="#112437" />
            <corners android:radius="0.5dp" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="2dp" />
            <gradient
                android:centerX="50%"
                android:centerY="50%"
                android:angle="180"

                android:gradientRadius="50%"
                android:startColor="#2A496E"
                android:centerColor="#25619B"
                android:endColor="#2A496E" />

            <stroke android:width="1dp" android:color="#385F88"/>
        </shape>
    </item>
</layer-list>